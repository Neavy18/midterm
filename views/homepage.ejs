<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/NavBar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/NavBar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/todotable.css" type="text/css" />

  <!-- Imported Fonts -->

</head>

<body>


  <nav class="navbar sticky-top navbar-light bg-light">
    <a class="navbar-brand" href="#">Smart-To-Do-List</a>
    <div class="nav-welcome">
      <span id="navTitle">
        <h2>Smart todo list</h2>
      </span>
      <span>
        <h5>Plan your day with us ðŸ—“</h5>
      </span>
      <span><strong>Welcome back</strong>@Overwhelmed_labber_212</span>
      <span><strong><em>Logout</em></strong></span>
      <i class="fa-thin fa-pen-fancy"></i>
    </div>
  </nav>

  <div class='SubmitInput'>
    <textarea name='text' id='to-do-input' placeholder='What are the plans?'>
      </textarea>
    <button type="submit" class="categorysubmitter btn btn-info btn-sm"> Add todo!</button>>
  </div>

  <div class="tableContainer">
    <div class="row">
      <div class="col">
        <div class="booksTable card" style="width: 18rem;">
          <div class="card-header">To Read</div>
          <ul class="list-group list-group-flush" id="booksList">
            <% for(const toDo of toDos) { %>
              <% if(toDo.category_id===1) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="editButton" name="" id="<%= toDo.id %>">
                  <%= toDo.name %>
                </li>
                <% } %>
                  <% } %>
          </ul>
        </div>
      </div>

      <div class="col">
        <div class="moviesTable card" style="width: 18rem;">
          <div class="card-header">
            Movies
          </div>
          <ul class="list-group list-group-flush" id="moviesList">
            <% for(const toDo of toDos) { %>
              <% if(toDo.category_id===3) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="editButton" name="" id="<%= toDo.id %>">
                  <%= toDo.name %>
                </li>
                <% } %>
                  <% } %>

          </ul>
        </div>
      </div>

      <div class="col">
        <div class="productTable card" style="width: 18rem;">
          <div class="card-header">
            Products
          </div>
          <ul class="list-group list-group-flush" id="productsList">
            <% for(const toDo of toDos) { %>
              <% if(toDo.category_id===2) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="editButton" name="" id="<%= toDo.id %>">
                  <%= toDo.name %>
                </li>
                <% } %>
                  <% } %>
          </ul>
        </div>
      </div>
      <div class="col">
        <div class="restaurantsTable card" style="width: 18rem;">
          <div class="card-header">
            Restaurants
          </div>
          <ul class="list-group list-group-flush" id="restaurantsList">
            <% for(const toDo of toDos) { %>
              <% if(toDo.category_id===4) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="editButton" name="" id="<%= toDo.id %>">
                  <%= toDo.name %>
                </li>
                <% } %>
                  <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>


</body>

</html>
