<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/apiBar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/navBar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/todotable.css" type="text/css" />

  <!-- Font Awesome Icon-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Imported Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bungee&family=Raleway:wght@200&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">

</head>

<body>

  <nav class="navbar sticky-top navbar-light bg-light" >
    <a class="navbar-brand" href="#">
      <span>Smart todo list</span>
      <span> <h4>Plan your day with us </h4> </span>
    </a>
    <div class="user-message d-flex flex-column" >
      <div class="welcome-back p-2 d-flex justify-content-end"> <strong>Welcome back</strong></div>
      <div class="p-2 d-flex justify-content-end"> <strong><em>
        @Overwhelmed_Labber </em></strong></div>
      <div class="fake-button p-2 d-flex justify-content-center btn btn-outline-info"><strong>Logout</strong></div>
    </div>
  </nav>

  <div class='submit-input'>
    <input type ='text' id='to-do-input' placeholder='What are the plans?'> </input>
    <buttontype="submit" class="categorysubmitter btn btn-info btn-lg"> Add todo </button>
    <i class="fas fa-pen-fancy"> </i>
  </div>

  <div class="tableContainer">
    <div class="row">
      <div class="col">
        <div class="booksTable card" style="width: 18rem;">
          <div class="card-header">To Read</div>
          <ul class="list-group list-group-flush" id="booksList">
            <% for(const toDo of toDos) { %>
              <% if(toDo.category_id===1) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="editButton" name="" id="<%= toDo.id %>">
                  <%= toDo.name %>
                </li>
                <% } %>
                  <% } %>
          </ul>
        </div>
      </div>

      <div class="col">
        <div class="moviesTable card" style="width: 18rem;">
          <div class="card-header">
            To Watch
          </div>
          <ul class="list-group list-group-flush" id="moviesList">
            <% for(const toDo of toDos) { %>
              <% if(toDo.category_id===3) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="editButton" name="" id="<%= toDo.id %>">
                  <%= toDo.name %>
                </li>
                <% } %>
                  <% } %>

          </ul>
        </div>
      </div>

      <div class="col">
        <div class="productTable card" style="width: 18rem;">
          <div class="card-header">
            To Buy
          </div>
          <ul class="list-group list-group-flush" id="productsList">
            <% for(const toDo of toDos) { %>
              <% if(toDo.category_id===2) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="editButton" name="" id="<%= toDo.id %>">
                  <%= toDo.name %>
                </li>
                <% } %>
                  <% } %>
          </ul>
        </div>
      </div>
      <div class="col">
        <div class="restaurantsTable card" style="width: 18rem;">
          <div class="card-header">
            To Eat
          </div>
          <ul class="list-group list-group-flush" id="restaurantsList">
            <% for(const toDo of toDos) { %>
              <% if(toDo.category_id===4) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="editButton" name="" id="<%= toDo.id %>">
                  <%= toDo.name %>
                </li>
                <% } %>
                  <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>


</body>

</html>
