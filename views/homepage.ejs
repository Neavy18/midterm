<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

<!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>

  <h1>Plan your day with us! ðŸ—“</h1>

  <div class='SubmitInput'>
      <textarea name='text' id='to-do-input'
      placeholder='What are the plans?'>
      </textarea>
      <buttontype="submit" class="categorysubmitter">Add todo!</button>>
      <!-- <input name='text' id='to-do-input'
      placeholder='What are the plans?'></input>
      <button type='submit' class='categorysubmitter btn btn-info btn-sm'>Add todo!</button> -->
  </div>

<!-- Books Table -->

  <div class="booksTable" style="width: 18rem;">
    <div class="card-header">
      Books
    </div>
    <ul class="list-group list-group-flush" id="booksList">
      <% for(const toDo of toDos) { %>
        <% if(toDo.category_id === 1) { %>
          <li class="list-group-item"> <%= toDo.name %> </li>
        <% } %>
      <% } %>
    </ul>
  </div>

<!-- Products Table -->

  <div class="productTable" style="width: 18rem;">
    <div class="card-header">
      Products
    </div>
    <ul class="list-group list-group-flush" id="productsList">
      <% for(const toDo of toDos) { %>
        <% if(toDo.category_id === 2) { %>
          <li class="list-group-item"> <%= toDo.name %> </li>
        <% } %>
      <% } %>
    </ul>
  </div>

<!-- Movies Table -->

  <div class="moviesTable" style="width: 18rem;">
    <div class="card-header">
      Movies
    </div>
    <ul class="list-group list-group-flush" id="moviesList">
      <% for(const toDo of toDos) { %>
        <% if(toDo.category_id === 3) { %>
          <li class="list-group-item"> <%= toDo.name %> </li>
        <% } %>
      <% } %>

    </ul>
  </div>

<!-- Restaurants -->

  <div class="restaurantsTable" style="width: 18rem;">
    <div class="card-header">
      Restaurants
    </div>
    <ul class="list-group list-group-flush" id="restaurantsList">
      <% for(const toDo of toDos) { %>
        <% if(toDo.category_id === 4) { %>
          <li class="list-group-item"> <%= toDo.name %> </li>
        <% } %>
      <% } %>
    </ul>
  </div>

</body>

</html>
